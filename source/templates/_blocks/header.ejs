<%
  // 模拟数据
  var menus =
   [ { link: 'http://fehey.com', name: '首页', openType: 'Internal' },
     { link: 'http://fehey.com/archives',
       name: '归档',
       openType: 'Internal' },
     { link: 'http://fehey.com/tags',
       name: '标签',
       openType: 'Internal' },
     { link: 'http://fehey.com/post/about/',
       name: '关于',
       openType: 'Internal' },
     { link: 'https://github.com/EryouHao',
       name: 'Github',
       openType: 'External' } ]
       var themeConfig =
       { archivesPageSize: 50,
         dateFormat: 'YYYY-MM-DD',
         footerInfo:
          'Powered by <a href="https://github.com/hve-notes/hve-notes" target="_blank" style="color: #f1f3f5;">Hve Notes</a>',
         postPageSize: 10,
         postUrlFormat: 'SLUG',
         showFeatureImage: true,
         siteDescription: '温故而知新',
         siteName: 'Hve Notes',
         tagUrlFormat: 'SHORT_ID',
         themeName: 'notes',
         domain: '/Users/haoeryou/Documents/hve-notes/output' }
%>

<nav class="border fixed split-nav">
  <div class="nav-brand">
    <h3><a href="<%= themeConfig.domain %>"><%= themeConfig.siteName %></a></h3>
  </div>
  <div class="collapsible">
    <input id="collapsible1" type="checkbox" name="collapsible1">
    <button>
      <label for="collapsible1">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </label>
    </button>
    <div class="collapsible-body">
      <ul class="inline">
        <% menus.forEach(function(menu) { %>
          <li>
            <% if (menu.openType === 'External') { %>
              <a href="<%= menu.link %>" class="menu" target="_blank">
                <%= menu.name %>
              </a>
            <% } else { %>
              <a href="<%= menu.link %>" class="menu">
                <%= menu.name %>
              </a>
            <% } %>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
</nav>
